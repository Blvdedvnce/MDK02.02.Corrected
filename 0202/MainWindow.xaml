<Window x:Class="_0202.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0202"
        mc:Ignorable="d"
        Title="Материалы" Height="450" Width="800" Icon="/Новые технологии.ico"
        FontFamily="Bahnschrift Light SemiCondensed" Background="#FFFFFF">
    <Grid>
        <Label Content="Заявки партнёров" HorizontalAlignment="Left" Margin="316,23,0,0" VerticalAlignment="Top" FontSize="24" Foreground="#0C4882"/>
        <ListBox x:Name="ListBoxPartners" Margin="126,90,92,89" Background="#BBDCFA" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="#0C4882" BorderThickness="1" Padding="8" Margin="0,0,0,10" Height="100" HorizontalAlignment="Stretch" Background="#FFFFFF">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock FontSize="15" Text="{Binding PartnerDisplay, Mode=OneWay}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding Address, Mode=OneWay}" FontSize="13" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Phone, Mode=OneWay}" FontSize="13" Margin="0,2,0,0"/>
                                <TextBlock Text="{Binding Rating, Mode=OneWay, StringFormat=Рейтинг: {0}}" FontSize="13" Margin="0,2,0,0"/>
                            </StackPanel>
                            <TextBlock Grid.Column="1" Text="{Binding CostText, Mode=OneWay}" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Image Margin="699,10,28,359" Source="/Новые технологии.png" Stretch="Fill"/>
        <Button Content="Добавить заявку" HorizontalAlignment="Left" Margin="550,360,0,0" VerticalAlignment="Top" Height="43" Width="208" Background="#0C4882" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold" Click="Button_Click"/>
        <Button Content="Продукция для поставщика" HorizontalAlignment="Left" Margin="78,360,0,0" Background="#0C4882" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold" VerticalAlignment="Top" Height="43" Width="203" Click="Button_Click_1"/>
        <Button Content="Работа с материалами" Background="#0C4882" Foreground="#FFFFFF" FontSize="16" FontWeight="Bold"  HorizontalAlignment="Left" Margin="316,360,0,0"  VerticalAlignment="Top" Height="43" Width="202" Click="Button_Click_2"/>
    </Grid>
</Window>
